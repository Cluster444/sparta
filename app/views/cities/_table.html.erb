<div class="panel panel-default">
  <div class="panel-heading">
    Cities
    <%= link_to 'New City', new_player_city_path(@player), class: 'btn btn-success pull-right' %>
    <div class="clearfix"></div>
  </div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Acropolis</th>
      <th>Location</th>
      <th>Resource Cap</th>
      <th>Production</th>
      <th>Storage</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= link_to city.name, [@player, city] %></td>
        <td><%= city.level || 'Not Set' %></td>
        <td><%= city.acropolis || 'Not Set' %></td>
        <td><%= city.location %></td>
        <td><%= city.resource_cap %></td>
        <td><%= city.timber_production %>/<%= city.bronze_production %>/<%= city.food_production %></td>
        <td><%= city.timber_storage %>/<%= city.bronze_storage %>/<%= city.food_storage %></td>
        <td>
          <%= link_to edit_player_city_path(@player, city) do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
        </td>
        <td>
          <%= link_to [@player, city], method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
