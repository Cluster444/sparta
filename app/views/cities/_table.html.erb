<div class="panel panel-default">
  <div class="panel-heading">
    Cities
    <%= link_to 'New City', new_player_city_path(@player), class: 'btn btn-success pull-right' %>
    <div class="clearfix"></div>
  </div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Resource Cap</th>
      <th>Total Resources</th>
      <th>Raids</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= link_to city.name, [@player, city] %></td>
        <td><%= city.location %></td>
        <td><%= city.resource_cap %></td>
        <td><%= city.total_raided_resources %></td>
        <td><%= city.raids.count %></td>
        <td><%= link_to 'New Raid', [:new, @player, city, :raid] %></td>
        <td><%= link_to 'New Scout', [:new, @player, city, :scout] %></td>
        <td><%= link_to 'Edit', edit_player_city_path(@player, city) %></td>
        <td><%= link_to 'Destroy', [@player, city], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
