<%= form_for([@player, @city], role: 'form') do |f| %>
  <% if @city.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
      <% @city.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <%= label_tag :coordinates %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :x %>
        <%= f.number_field :x, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :y %>
        <%= f.number_field :y, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :level %>
    <%= f.text_field :level, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :acropolis %>
    <%= f.number_field :acropolis, class: 'form-control' %>
  </div>
  <%= f.submit 'Save', class: 'btn btn-default' %>
  <small><%= link_to 'Cancel', player_path(@player) %></small>
<% end %>
