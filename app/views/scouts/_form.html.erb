<%= form_for([@player, @city, @scout], role: 'form') do |f| %>
  <% if @scout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scout.errors.count, "error") %> prohibited this scout from being saved:</h2>

      <ul>
      <% @scout.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :timber %>
    <%= f.number_field :timber, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :bronze %>
    <%= f.number_field :bronze, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :food %>
    <%= f.number_field :food, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :scouted_at %>
    <%= f.datetime_picker :scouted_at, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-default' %>
    <small><%= link_to 'Cancel', player_city_path(@player, @city) %></small>
  </div>
<% end %>
